<!DOCTYPE html>
<html>    
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        <!-- Favicon -->
        <link rel="icon" type="image/ico" href="../../Content/Icons/Favicon/favicon.ico" />
        <!-- Stylesheets -->
        <link rel="stylesheet" type="text/css"href="@Url.Content("~/Content/themes/simple/style.css")" />
        <!-- Scripts -->
        <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
        <script src="@Url.Content("~/Scripts/app.js")"></script>      
        
        <script type="text/javascript">
            $(document).ready(function () {
                
                $('input[type="text"]').keyup(function () {
                    if ($(this).val() != '') {
                        $('input[type="submit"]').removeAttr('disabled');
                    } else {
                        $('input[type="submit"]').attr('disabled', 'disabled');
                    }
                });
            });

        </script>

    </head>
    <body>
        <div id="main"> 
            <!-- Header -->
            <div id="header">
              <div id="logo">
                <div id="logo_text">
                  <h1><a href="/">Betons<span class="logo_colour">BlackSheep</span></a>Blog</h1>
                  <h2>Ketchup testing uber technologies and More...</h2>
                </div>
              </div>
 
              <!-- Navigation -->
              <div id="menubar">
                <ul id="menu">
                    <li>@Html.ActionLink("Posts", "Posts", "Blog")</li>
                    @*<li><a href="http://beton.github.com" target="_blank">Contact</a></li>*@
                    <li><a href="http://beton.github.com" target="_blank">About me</a></li>                    
                </ul>
              </div>
 
            </div>
 
            <!-- Site Content -->
            <div id="site_content">
                @Html.Partial("_Search")
                @RenderBody()
            </div>
 
             <!-- Footer -->
            <div id="footer">
                <p>Copyright © @DateTime.Now.Year Ketchup</p>
                <p>Powered by <a href="http://beton.github.com" target="_blank">Beton</a></p>
                <p>All Rights Reserved</p>
            </div>
        </div>            
    </body>
</html>
