@model Blog4Net.Web.Models.ListViewModel

@{    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content">
 
  <h1>@ViewBag.Title</h1>
 
  @if (Model.Posts.Count > 0)
  {
    foreach (var post in Model.Posts)
    {
      @Html.Partial("_PostTemplate", post)
    }
  }
  else
  {
    <p>No posts found!</p>
  }
 
</div>
